<ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="254dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="100dp"
        android:layout_weight="0.01"
        android:src="@raw/penelope" />
</LinearLayout>